@model IEnumerable<ESale.MvcWebUI.Models.AdminOrderModel>


@{
    ViewBag.Title = "Siparişler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container pb-5">

    <h2>SİPARİŞLER</h2>
    <hr />


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Number</th>
                <th>Order Date</th>
                <th>Order Status</th>
                <th>Product Count</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.OrderDate</td>
                    <td>@item.OrderState</td>
                    <td>@item.Count</td>
                    <td>@item.Total</td>
                    <td>
                        @Html.ActionLink("Details","Details", new { id = item.Id},new { @class = "btn btn-primary btn-sm"})
                    </td>
                   
                </tr>

            }
        </tbody>

    </table>

</div>