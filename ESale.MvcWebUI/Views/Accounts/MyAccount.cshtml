@model IEnumerable<ESale.MvcWebUI.Models.UserOrderModel>


@{
    ViewBag.Title = "MyAccount";
}




<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 style="color:red">SİPARİŞ BİLGİLERİNİZ</h2> 
            <hr />

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Order Number:</th>
                        <th>Order Date:</th>
                        <th>Total:</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>@item.Total TL</td>
                            <td>@item.OrderState</td>
                            <td>
                                @Html.ActionLink("Order Details", "Details", new { id = item.Id} , new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>
